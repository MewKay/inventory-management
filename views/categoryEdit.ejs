<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("partials/head.ejs") %>
  <title><%= title %></title>
  <style>
    .hidden {
      display: none;
    }
  </style>
</head>
<body>
  <%- include("partials/header.ejs") %>
  <main>
    <h3>Edit Categories</h3>
    <ul class="error-messages">
      <% errors.forEach((error) => { %>
        <li>
          <%= error.msg %>
        </li>
      <% }) %>
    </ul>
    <% categories.forEach((category) => { %>
      <div class="category-card-container">
        <div class="category-card">
          <p class="display-name"><%= category.name %></p>

          <form 
            class="edit-name hidden" 
            action="/edit/category/<%= category.id %>/update" 
            method="post"
          >
            <input 
              type="text"
              value="<%= category.name %>"
              minlength="1"
              maxlength="255"
              name="name"
              placeholder="Please insert a category name"
              required
            />
            <button type="submit">Save</button>
          </form>

          <p><%= category.products_count %> products</p>
        </div>

        <button onclick="toggleForm(this)">
          Edit
        </button>

        <form action="/edit/category/<%= category.id %>/delete" method="post">
          <button 
            type="submit" 
            onclick="return confirm('Are you sure you want to delete this category ? Its associated products will be uncategorized.')"
          > 
            Delete
          </button>
        </form>
      </div>
    <% }) %>

    <div class="add-category-container">
      <button class="button-toggle-new-category" onclick="addToggleForm(this)">
        + Add new category
      </button>

      <div class="new-category-form hidden">
        <form action="/edit/category/new" method="post">
          <input 
            type="text"
            minlength="1"
            maxlength="255"
            name="name"
            placeholder="Please insert a category name"
            required
          />
          <button type="submit">Save</button>
          <button type="reset" onclick="addToggleForm(this)">Cancel</button>
        </form>
        <p>0 products</p>
      </div>
    </div>
  </main>
  <script>
    const toggleForm = (button) => {
      const categoryCard = button.closest(".category-card-container");
      const displayName = categoryCard.querySelector(".display-name");
      const editName = categoryCard.querySelector(".edit-name");
      
      displayName.classList.toggle("hidden");
      editName.classList.toggle("hidden");
    }

    const addToggleForm = (button) => {
      const addContainer = button.closest(".add-category-container");
      const buttonNewCategory = addContainer.querySelector(".button-toggle-new-category");
      const formNewCategory = addContainer.querySelector(".new-category-form");
      
      buttonNewCategory.classList.toggle("hidden");
      formNewCategory.classList.toggle("hidden");
    }
  </script>
</body>
</html>