<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
    <title>Grocery Inventory</title>
    <style>
      .hidden {
        display: none;
      }
    </style>
  </head>
  <body>
    <%- include("partials/header.ejs") %>
    <main>
      <nav>
        <a href="/edit/products/new">Add new product</a>
        <a href="/edit/category">Manage Categories</a>
        <div class="edit-product-container">
          <% if (locals.errors) { %>
            <ul class="error-messages">
              <% errors.forEach((error) => { %>
                <li><%= error.msg %></li>
              <% }) %>
            </ul>
          <% } %>
          <button class="button-toggle-form" onclick="toggleForm(this)">
            Edit a product
          </button>
          <form class="search-product hidden" action="/edit" method="post">
            <input
              type="text"
              name="name"
              minlength="1"
              maxlength="255"
              placeholder="Enter a product nameâ€¦"
              required
            />
            <button type="submit">Search</button>
          </form>
        </div>
      </nav>
      <% if (locals.matchingProducts) { %>
       <div class="product-match">
        <h4>Products matching you search :</h4>
        <ul>
          <% matchingProducts.forEach((product) => { %>
            <li>
              <a href="/edit/products/<%= product.id %>">
                <%= product.name %>
              </a>
            </li>
          <% }) %>
        </ul>
       </div>
      <% } %>
    </main>
    <script>
      const toggleForm = (button) => {
        const container = button.closest(".edit-product-container");
        const form = container.querySelector(".search-product");

        form.classList.toggle("hidden");
      };
    </script>
  </body>
</html>
