<div>
  <label for="product-name">Name :</label>
  <input
    type="text"
    name="name"
    id="product-name"
    maxlength="255"
    required
    value="<%= product.name %>"
  />
</div>

<div>
  <label for="product-category">Category :</label>
  <select name="category_id" id="product-category">
    <option value="">Uncategorized</option>
    <% categories.forEach((category) => { %>
      <option value="<%= category.id %>"
        <% if (category.name === product.category) { %>
          selected
        <% } %>
        >
        <%= category.name %>
      </option>
    <% }) %>
  </select>
</div>

<div>
  <label for="product-quantity">Quantity :</label>
  <input
    type="number"
    name="quantity"
    id="product-quantity"
    min="0"
    required
    value="<%= product.quantity %>"
  />
  <input
    type="text"
    name="unit"
    id="product-unit"
    maxlength="50"
    placeholder="Quantity unit"
    required
    value="<%= product.unit %>"
  />
</div>

<div>
  <label for="product-price">Price (per unit):</label>
  <input
    type="number"
    name="price"
    id="product-price"
    min="0"
    step="0.01"
    placeholder="0.00"
    required
    value="<%= product.price %>"
  />
</div>
