<table>
  <caption>
    Products List
  </caption>
  <thead>
    <tr>
      <th>
        <a href="?sort=name">
          Name
        </a>
      </th>
      <th>
        <a href="?sort=quantity">
          Quantity
        </a>
      </th>
      <th>
        <a href="?sort=price">
            Price(per unit)
        </a>
      </th>
      <th>
        <a href="?sort=category">
          Category
        </a>
      </th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach((product) => { %>
      <tr>
        <td><%= product.name %></td>
        <td><%= `${product.quantity} ${product.unit}` %></td>
        <td>$<%= product.price %></td>
        <td><%= product.category %></td>
        <td><a href="/view/products/<%= product.id %>">. . .</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>
