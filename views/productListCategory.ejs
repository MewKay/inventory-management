<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
    <title>Grocery Inventory</title>
  </head>
  <body>
    <%- include("partials/header.ejs") %>
    <main>
      <div class="category-list-container">
        <div class="category-select">
          Show category :
          <ul>
            <button
              class="select-expand"
              aria-label="Select products' category to display"
            >
              <%= currentCategoryName %> 
            </button>
            <% categories.forEach((category) => { %>
              <li>
                <a href="<%= category.id %>">
                  <%= category.name %>
                </a>
              </li>
            <% }) %>
          </ul>
        </div>
        <%- include("partials/productTable.ejs", { 
          products, 
          pagination, 
          nameDirection, 
          quantityDirection, 
          priceDirection, 
          categoryDirection
        }) %>
      </div>
    </main>
  </body>
</html>
