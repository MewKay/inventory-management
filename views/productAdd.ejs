<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
    <link rel="stylesheet" href="/styles/productForm.css">
    <link rel="stylesheet" href="/styles/productAdd.css">
    <title><%= title %></title>
  </head>
  <body>
    <%- include("partials/header.ejs") %>
    <main>
      <section>
        <h3 class="heading">Add new product</h3>
        <form action="/edit/products/new" method="post" class="product-form">
          <%- include("partials/productForm.ejs", { product, categories, errors }) %>
          <div class="action-container">
            <a href="/edit" class="action">Return</a>
            <button type="button" class="action" onclick="openModal()">Save</button>
          </div>
          <%- include("partials/passwordModal.ejs") %>
        </form>
      </section>
    </main>
    <script src="/scripts/passwordModal.js"></script>
  </body>
</html>
